<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    helpPath="en/cq/current/wcm/default_components.html#Search"
    title="Search"
    xtype="panel">
    <items jcr:primaryType="cq:WidgetCollection">
        <filterOne
            jcr:primaryType="cq:Widget"
            fieldLabel="Filter One:"
            name="./filterOne"
            allowBlank="false"
            showPathInLabels="false"
            xtype="tags"/>
        <filterOneLabel
            jcr:primaryType="cq:Widget"
            name="./filterOneLabel"
            fieldLabel="Filter One Label:"
            xtype="textfield"/>
        <filterTwo
            jcr:primaryType="cq:Widget"
            fieldLabel="Filter Two:"
            name="./filterTwo"
            allowBlank="false"
            showPathInLabels="false"
            xtype="tags"/>
        <filterTwoLabel
            jcr:primaryType="cq:Widget"
            fieldLabel="Filter Two Label:"
            name="./filterTwoLabel"
            xtype="textfield"/>
        <extraOptions
            jcr:primaryType="cq:Widget"
            name="./extraOptions"
            fieldLabel="Display extra options?"
            inputValue="true"
            type="checkbox"
            xtype="selection"/>
    </items>
</jcr:root>
