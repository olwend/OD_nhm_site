<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
        <source
            jcr:primaryType="cq:Widget"
            anchor="100%"
            title="Component Source"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <shareConfirmation
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Original Component"
                    name="./contentSource"
                    optionsProvider="function(path, record){ return CQ.Util.formatData(CQ.HTTP.eval(CQ.HTTP.noCaching(CQ.HTTP.getPath()+'.sharedcomponents.json')));}"
                    type="select"
                    xtype="selection"/>
            </items>
        </source>
    </items>
</jcr:root>
