<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    height="{Long}400"
    title="LinkList"
    width="1000"
    xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
        <basic
            jcr:primaryType="cq:Panel"
            title="Basic"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <numcolumns
                    jcr:primaryType="cq:Widget"
                    defaultValue=""
                    fieldLabel="Number of Columns"
                    name="./numColumns"
                    type="select"
                    xtype="selection">
                    <listeners
                        jcr:primaryType="nt:unstructured"
                        loadcontent="function(){this.findParentByType('tabpanel').manageTabs(this.getValue(),true);}"
                        selectionchanged="function(box,value){box.findParentByType('tabpanel').manageTabs(value);}"/>
                    <options jcr:primaryType="cq:WidgetCollection">
                        <onecolumn
                            jcr:primaryType="nt:unstructured"
                            text="One Column"
                            value="firstcolumn"/>
                        <twocolumns
                            jcr:primaryType="nt:unstructured"
                            text="Two Columns"
                            value="secondcolumn"/>
                        <threecolumns
                            jcr:primaryType="nt:unstructured"
                            text="Three Columns"
                            value="thirdcolumn"/>
                    </options>
                </numcolumns>
                <title
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Component title"
                    name="./title"
                    width="155"
                    xtype="textfield"/>
                <hyperlink
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Hyperlink"
                    itemId="hyperlink"
                    name="./hyperlink"
                    width="155"
                    xtype="pathfield"/>
                <newwindow
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Open in New Window"
                    name="./newwindow"
                    type="checkbox"
                    xtype="selection"/>
                <backgroundcolor
                    jcr:primaryType="cq:Widget"
                    defaultValue="white"
                    fieldLabel="Background Color"
                    name="./backgroundcolor"
                    type="select"
                    xtype="selection">
                    <options jcr:primaryType="cq:WidgetCollection">
                        <white
                            jcr:primaryType="nt:unstructured"
                            text="White Background"
                            value="white"/>
                        <grey
                            jcr:primaryType="nt:unstructured"
                            text="Grey Background"
                            value="grey"/>
                    </options>
                </backgroundcolor>
                <description
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Description of the Links"
                    name="./description"
                    xtype="richtext">
                    <rtePlugins
                        jcr:primaryType="cq:Widget"
                        path="/apps/nhmwww/components/includes/rteconfig/rtePlugins.infinity.json"
                        xtype="cqinclude"/>
                </description>
            </items>
        </basic>
        <firstcolumn
			jcr:primaryType="cq:Panel"
			title="First Column">
			<items jcr:primaryType="cq:WidgetCollection">
			     <columntitle
			         jcr:primaryType="cq:Widget"
			         fieldLabel="First Column Header"
			         name="./firstHeader"
			         width="155"
			         xtype="textfield"/>
			     <hyperlink
			         jcr:primaryType="cq:Widget"
			         fieldLabel="Hyperlink"
			         name="./firstHeaderLink"
			         width="155"
			         xtype="pathfield"/>
			     <newwindow
			         jcr:primaryType="cq:Widget"
			         fieldLabel="Open in New Window"
			         name="./firstHeaderNewwindow"
			         type="checkbox"
			         xtype="selection"/>
			    <items
			        jcr:primaryType="cq:Widget"
			        fieldLabel="Links"
			        hideLabel="{Boolean}true"
			        name="./firstLinkListItems"
			        xtype="multifield">
			        <fieldConfig
			            jcr:primaryType="nt:unstructured"
			            xtype="linklistpathfield"/>
			    </items>
			</items>
        </firstcolumn>
        <secondcolumn
			jcr:primaryType="cq:Panel"
			title="Second Column">
			<items jcr:primaryType="cq:WidgetCollection">
			     <columntitle
			         jcr:primaryType="cq:Widget"
			         fieldLabel="Second Column Header"
			         name="./secondHeader"
			         width="155"
			         xtype="textfield"/>
			     <hyperlink
			         jcr:primaryType="cq:Widget"
			         fieldLabel="Hyperlink"
			         name="./secondHeaderLink"
			         width="155"
			         xtype="pathfield"/>
			     <newwindow
			         jcr:primaryType="cq:Widget"
			         fieldLabel="Open in New Window"
			         name="./secondHeaderNewwindow"
			         type="checkbox"
			         xtype="selection"/>
			    <items
			        jcr:primaryType="cq:Widget"
			        fieldLabel="Links"
			        hideLabel="{Boolean}true"
			        name="./secondLinkListItems"
			        xtype="multifield">
			        <fieldConfig
			            jcr:primaryType="nt:unstructured"
			            xtype="linklistpathfield"/>
			    </items>
			</items>
		</secondcolumn>
        <thirdcolumn
		    jcr:primaryType="cq:Panel"
		    title="Third Column">
		    <items jcr:primaryType="cq:WidgetCollection">
		         <columntitle
		             jcr:primaryType="cq:Widget"
		             fieldLabel="Third Column Header"
		             name="./thirdHeader"
		             width="155"
		             xtype="textfield"/>
		         <hyperlink
		             jcr:primaryType="cq:Widget"
		             fieldLabel="Hyperlink"
		             name="./thirdHeaderLink"
		             width="155"
		             xtype="pathfield"/>
		         <newwindow
		             jcr:primaryType="cq:Widget"
		             fieldLabel="Open in New Window"
		             name="./thirdHeaderNewwindow"
		             type="checkbox"
		             xtype="selection"/>
		        <items
		            jcr:primaryType="cq:Widget"
		            fieldLabel="Links"
		            hideLabel="{Boolean}true"
		            name="./thirdLinkListItems"
		            xtype="multifield">
		            <fieldConfig
		                jcr:primaryType="nt:unstructured"
		                xtype="linklistpathfield"/>
		        </items>
		    </items>
		</thirdcolumn>
    </items>
</jcr:root>
