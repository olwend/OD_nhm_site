<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Panel"
    title="Event General Config">
    <items jcr:primaryType="cq:WidgetCollection">
        <elementType
            jcr:primaryType="cq:Widget"
            collapsed="{Boolean}false"
            collapsible="{Boolean}false"
            xtype="dialogfieldset">
            <items jcr:primaryType="cq:WidgetCollection">
                <datesRecurrence
                    jcr:primaryType="cq:Widget"
                    hidden="true"
                    name="./jcr:datesRecurrence"
                    xtype="textfield"/>
                <allDayRecurrence
                    jcr:primaryType="cq:Widget"
                    hidden="true"
                    name="./jcr:allDayRecurrence"
                    xtype="textfield"/>
                <timesRecurrence
                    jcr:primaryType="cq:Widget"
                    hidden="true"
                    name="./jcr:timesRecurrence"
                    xtype="textfield"/>
                <eventPagePath
                    jcr:primaryType="cq:Widget"
                    hidden="true"
                    name="./jcr:eventPagePath"
                    xtype="textfield"/>
                <eventsList
                    jcr:primaryType="cq:Widget"
                    cls="event-list"
                    fieldLabel="Event Type:"
                    name="./eventSelect"
                    xtype="selection">
                    <options jcr:primaryType="cq:WidgetCollection">
                        <exhibition
                            jcr:primaryType="nt:unstructured"
                            text="Exhibition"
                            value="Exhibition"/>
                        <school
                            jcr:primaryType="nt:unstructured"
                            text="School"
                            value="School"/>
                        <science
                            jcr:primaryType="nt:unstructured"
                            text="Science"
                            value="Science"/>
                        <tring
                            jcr:primaryType="nt:unstructured"
                            text="Tring"
                            value="Tring"/>
                        <visitor
                            jcr:primaryType="nt:unstructured"
                            text="Visitor"
                            value="Visitor"/>
                    </options>
                    <listeners
                        jcr:primaryType="nt:unstructured"
                        selectionchanged="function(field,value) {
                                          displayEventConfig(field,value); }"/>
                </eventsList>
            </items>
        </elementType>
        <basic
            jcr:primaryType="cq:Widget"
            collapsed="{Boolean}false"
            collapsible="{Boolean}false"
            xtype="dialogfieldset">
            <items jcr:primaryType="cq:WidgetCollection">
                <eventTitle
                    jcr:primaryType="cq:Widget"
                    allowBlank="false"
                    fieldLabel="Event Title"
                    name="./jcr:eventTitle"
                    maxLength="45"
                    maxLengthText="The max length for this field is 45 characters" 
                    xtype="textfield"/>
                <eventDescription
                    jcr:primaryType="cq:Widget"
                    allowBlank="false"
                    fieldLabel="Event Description"
                    maxLength="125"
                    maxLengthText="The max length for this field is 125 characters" 
                    name="./jcr:eventDescription"
                    xtype="textarea"/>
                <eventVenue
                    jcr:primaryType="cq:Widget"
                    allowBlank="false"
                    fieldLabel="Event Venue"
                    name="./eventVenue"
                    xtype="textfield"/>
                <eventGroup
                    jcr:primaryType="cq:Widget"
                    allowBlank="true"
                    fieldLabel="Event Group"
                    name="./eventGroup"
                    xtype="textfield"/>
                <eventTileLink
                    jcr:primaryType="cq:Widget"
                    allowBlank="true"
                    fieldLabel="Event Tile Link"
                    name="./eventTileLink"
                    xtype="textfield"/>
                <tags
                    jcr:primaryType="cq:Widget"
                    cls="cq-propsdialog-tags"
                    fieldLabel="Tags/Keywords"
                    name="./cq:tags"
                    xtype="tags"/>
            </items>
        </basic>
        <dateAndTime
            jcr:primaryType="cq:Widget"
            addItemLabel="Add Date"
            cls="dates-container"
            name="./dateAndTime"
            title="Dates"
            xtype="multifield">
            <fieldConfig
                jcr:primaryType="cq:Widget"
                border="false"
                cls="dates-container-field"
                layout="form"
                xtype="nhm-multi-field-panel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <dateTime
                        jcr:primaryType="cq:Widget"
                        allowBlank="{Boolean}false"
                        dName="dateTime"
                        fieldLabel="Date"
                        hideTime="{Boolean}true"
                        value="now"
                        xtype="datetime">
                        <listeners
                            jcr:primaryType="nt:unstructured"
                            change="function(field,newValue,oldValue) {                                                                                                                 checkTime(field,newValue,oldValue); }"/>
                    </dateTime>
                    <allDay
                        jcr:primaryType="cq:Widget"
                        cls="dialog-checkbox"
                        dName="allDay"
                        fieldLabel="All Day Event"
                        inputValue="true"
                        type="checkbox"
                        xtype="selection">
                        <listeners
                            jcr:primaryType="nt:unstructured"
                            selectionchanged="function(field,value,isChecked) {                                                                                                                 allDaySelected(field,value,isChecked); }"/>
                    </allDay>
                    <times-multifield
                        jcr:primaryType="cq:Widget"
                        addItemLabel="Add Times"
                        cls="times-container"
                        dName="times"
                        title="Add Times"
                        xtype="multifield">
                        <fieldConfig
                            jcr:primaryType="cq:Widget"
                            border="false"
                            cls="times-container-time"
                            layout="form"
                            xtype="nhm-multi-field-panel">
                            <items jcr:primaryType="cq:WidgetCollection">
                                <time
                                    jcr:primaryType="cq:Widget"
                                    allowBlank="{Boolean}false"
                                    cls="times-container-time"
                                    dName="time"
                                    fieldLabel="Time"
                                    xtype="timefield"/>
                            </items>
                        </fieldConfig>
                    </times-multifield>
                    <recur-multifield
                        jcr:primaryType="cq:Widget"
                        addItemLabel="Add Recurrence"
                        cls="recurrence-panel"
                        dName="recur"
                        orderable="false"
                        title="Recurrence"
                        xtype="multifield">
                        <fieldConfig
                            jcr:primaryType="cq:Widget"
                            border="false"
                            layout="form"
                            xtype="nhm-multi-field-panel">
                            <items jcr:primaryType="cq:WidgetCollection">
                                <startDate
                                    jcr:primaryType="cq:Widget"
                                    dateFormat="d-m-y"
                                    dName="startDate"
                                    fieldLabel="Start Date"
                                    hideTime="{Boolean}true"
                                    xtype="datetime">
                                    <listeners
                                        jcr:primaryType="nt:unstructured"
                                        change="function(field,newValue,oldValue) {                                                                                                                     checkTime(field,newValue,oldValue); }"/>
                                </startDate>
                                <endDate
                                    jcr:primaryType="cq:Widget"
                                    dateFormat="d-m-y"
                                    dName="endDate"
                                    fieldLabel="End Date"
                                    hideTime="{Boolean}true"
                                    xtype="datetime">
                                    <listeners
                                        jcr:primaryType="nt:unstructured"
                                        change="function(field,newValue,oldValue) {                                                                                                                       checkTime(field,newValue,oldValue); }"/>
                                </endDate>
                                <recurSelectList
                                    jcr:primaryType="cq:Widget"
                                    cls="event-list"
                                    dName="recurSelect"
                                    fieldLabel="How often?"
                                    name="./recurSelect"
                                    type="checkbox"
                                    xtype="selection">
                                    <options jcr:primaryType="cq:WidgetCollection">
                                        <daily
                                            jcr:primaryType="nt:unstructured"
                                            text="Daily"
                                            value="daily"/>
                                        <weekly
                                            jcr:primaryType="nt:unstructured"
                                            text="Weekly"
                                            value="weekly"/>
                                        <monthly
                                            jcr:primaryType="nt:unstructured"
                                            text="Monthly"
                                            value="monthly"/>
                                    </options>
                                    <listeners
                                        jcr:primaryType="nt:unstructured"
                                        afterlayout="function(component){                                             
                                                     initRecurValues(component);}"
                                        selectionchanged="function(selection, value, isChecked){                                             
                                                          initRecurValues(selection, value, isChecked);}"/>
                                </recurSelectList>
                                <customMonthCheck
                                    jcr:primaryType="cq:Widget"
                                    dName="customMonthCheck"
                                    fieldDescription="Tick here if you want to show extra monthly recurrence parameters"
                                    fieldLabel="Extra parameters"
                                    hidden="true"
                                    name="./customMonthCheck"
                                    type="checkbox"
                                    xtype="selection">
                                    <listeners
                                        jcr:primaryType="nt:unstructured"
                                        beforeshow="function(component){                                             
                                                     initExtraValues(component);}"
                                        selectionchanged="function(selection, value, isChecked){                                             
                                                          initExtraValues(selection, value, isChecked);}"/>
                                </customMonthCheck>
                                <repeatList
                                    jcr:primaryType="cq:Widget"
                                    cls="event-list"
                                    dName="repeatList"
                                    fieldLabel="The"
                                    hidden="true"
                                    type="checkbox"
                                    xtype="selection">
                                    <options jcr:primaryType="cq:WidgetCollection">
                                        <first
                                            jcr:primaryType="nt:unstructured"
                                            text="First"
                                            value="First"/>
                                        <second
                                            jcr:primaryType="nt:unstructured"
                                            text="Second"
                                            value="2"/>
                                        <third
                                            jcr:primaryType="nt:unstructured"
                                            text="Third"
                                            value="3"/>
                                        <fourth
                                            jcr:primaryType="nt:unstructured"
                                            text="Fourth"
                                            value="4"/>
                                        <last
                                            jcr:primaryType="nt:unstructured"
                                            text="Last"
                                            value="Last"/>
                                    </options>
                                    <listeners
                                        jcr:primaryType="nt:unstructured"
                                        afterlayout="function(component){                                             
                                                     initRepeatValues(component);}"
                                        selectionchanged="function(selection, value, isChecked){                                             
                                                          initRepeatValues(selection, value, isChecked);}"/>
                                </repeatList>
                                <weekdaysList
                                    jcr:primaryType="cq:Widget"
                                    cls="event-list"
                                    dName="weekdaysList"
                                    fieldLabel="Day(s):"
                                    hidden="true"
                                    type="checkbox"
                                    xtype="selection">
                                    <options jcr:primaryType="cq:WidgetCollection">
                                        <monday
                                            jcr:primaryType="nt:unstructured"
                                            text="Mon."
                                            value="Monday"/>
                                        <tuesday
                                            jcr:primaryType="nt:unstructured"
                                            text="Tues."
                                            value="Tuesday"/>
                                        <wednesday
                                            jcr:primaryType="nt:unstructured"
                                            text="Wed."
                                            value="Wednesday"/>
                                        <thursday
                                            jcr:primaryType="nt:unstructured"
                                            text="Thurs."
                                            value="Thursday"/>
                                        <friday
                                            jcr:primaryType="nt:unstructured"
                                            text="Fri."
                                            value="Friday"/>
                                        <saturday
                                            jcr:primaryType="nt:unstructured"
                                            text="Sat."
                                            value="Saturday"/>
                                        <sunday
                                            jcr:primaryType="nt:unstructured"
                                            text="Sun."
                                            value="Sunday"/>
                                    </options>
                                    <listeners
                                        jcr:primaryType="nt:unstructured"
                                        afterlayout="function(component){                                             
                                                     resetWeekDaysValues(component);}"
                                        selectionchanged="function(selection, value, isChecked){                                             
                                                          resetWeekDaysValues(selection, value, isChecked);}"/>
                                </weekdaysList>
                                <daysList
                                    jcr:primaryType="cq:Widget"
                                    cls="event-list"
                                    dName="daysList"
                                    hidden="true"
                                    type="checkbox"
                                    xtype="selection">
                                    <options jcr:primaryType="cq:WidgetCollection">
                                        <day
                                            jcr:primaryType="nt:unstructured"
                                            text="Day"
                                            value="Day"/>
                                        <weekendDay
                                            jcr:primaryType="nt:unstructured"
                                            text="Weekend day"
                                            value="WeekendDay"/>
                                        <weekday
                                            jcr:primaryType="nt:unstructured"
                                            text="Weekday"
                                            value="Weekday"/>
                                    </options>
                                    <listeners
                                        jcr:primaryType="nt:unstructured"
                                        afterlayout="function(component){                                             
                                                     initRepeatValues(component);resetDaysValues(component);}"
                                        selectionchanged="function(selection, value, isChecked){                                             
                                                          initRepeatValues(selection, value, isChecked);resetDaysValues(selection, value, isChecked);}"/>
                                </daysList>
                                <weekRepeat
                                    jcr:primaryType="cq:Widget"
                                    dName="weekRepeat"
                                    fieldLabel="Recur every (x) Weeks"
                                    hidden="true"
                                    xtype="numberfield"/>
                                <dayRepeat
                                    jcr:primaryType="cq:Widget"
                                    dName="dayRepeat"
                                    fieldLabel="Day"
                                    hidden="true"
                                    xtype="numberfield"/>
                                <monthRepeat
                                    jcr:primaryType="cq:Widget"
                                    dName="monthRepeat"
                                    fieldLabel="Of every (x) Months"
                                    hidden="true"
                                    xtype="numberfield"/>
                            </items>
                        </fieldConfig>
                        <listeners
                            jcr:primaryType="nt:unstructured"
                            beforeadd="function(selection, value, number){                                             
                                       if (number > 0) {                                                 
                                       CQ.Ext.Msg.show({title: 'Limit reached',  msg: 'You are only allowed to add 1 item to this module',icon:CQ.Ext.MessageBox.WARNING,buttons: CQ.Ext.Msg.OK})
                                       ;;return false;}}"/>
                    </recur-multifield>
                </items>
            </fieldConfig>
        </dateAndTime>
    </items>
</jcr:root>
